  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node -r newrelic dist/main",
    "migration:generate": "yarn typeorm -- -d ./dist/infra/database/config/pg-data-source.config.js migration:generate ./src/infra/database/migration/migration",
    "migration:run": "yarn typeorm -- -d ./dist/infra/database/config/pg-data-source.config.js migration:run",
    "migration:revert": "yarn typeorm -- -d ./dist/infra/database/config/pg-data-source.config.js migration:revert",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --detectOpenHandles",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:unit": "jest --config test/unit/jest-unit.config.ts --watchAll",
    "test:e2e": "jest --config test/e2e/jest-e2e.config.ts --detectOpenHandles"
  },
